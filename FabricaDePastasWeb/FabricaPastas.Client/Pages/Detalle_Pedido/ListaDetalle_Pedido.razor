<h1 class="text-center mb-4 text-warning fw-bold">📋 Detalle de pedidos</h1>

<div class="container mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0 fw-semibold">Para registrar un nuevo detalle, hacé click en el botón:</p>
        <a class="btn btn-primary" href="/api/Detalle_Pedido/Crear">➕ Cargar detalle pedido</a>
    </div>
</div>

<div class="container">
    @if (Mensaje == null)
    {
        @if (Listadetalle_peddo == null)
        {
            <div class="alert alert-secondary text-center">🔄 Buscando detalles de pedidos...</div>
        }
        else if (Listadetalle_peddo.Count == 0)
        {
            <div class="alert alert-warning text-center">⚠️ No existen detalles de pedidos cargados</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>🔢 Cantidad</th>
                            <th>💲 Precio unitario</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Listadetalle_peddo)
                        {
                            <tr>
                                <td>@item.Cantidad</td>
                                <td>$@item.Precio_Unitario</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger text-center">❌ Error: @Mensaje</div>
    }
</div>

   

@code {

    List<Detalle_Pedido> Listadetalle_peddo;

    string Mensaje;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        await Leer();
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Detalle_Pedido>>("api/Detalle_Pedido");

        string Mensaje = "";

        if (!resp.Error)
        {
            Listadetalle_peddo = resp.Respuesta;
        }
        else
        {
            Mensaje = await resp.ObtenerError();
        }
    }
}






