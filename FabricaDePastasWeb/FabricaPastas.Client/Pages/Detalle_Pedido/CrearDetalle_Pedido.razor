<h1 class="text-center mb-4">📦 Carga de productos (Stock)</h1>

<EditForm Model="detallePedido" OnValidSubmit="Grabar" class="container">
    <DataAnnotationsValidator />

    <div class="row g-3">

        <div class="col-md-6">
            <label for="Cantidad" class="form-label">Nombre</label>
            <input type="text" id="Cantidad" @bind="detallePedido.Nombre" class="form-control" min="1" step="1" placeholder="Ej: 10" />
            <ValidationMessage For="@(() => detallePedido.Nombre)" />
        </div>

        <div class="col-md-6">
            <label for="Cantidad" class="form-label">Cantidad</label>
            <input type="number" id="Cantidad" @bind="detallePedido.Cantidad" class="form-control" min="1" step="1" placeholder="Ej: 10" />
            <ValidationMessage For="@(() => detallePedido.Cantidad)" />
        </div>

        <div class="col-md-6">
            <label for="precioUnitario" class="form-label">Precio unitario</label>
            <input type="number" id="precioUnitario" @bind="detallePedido.Precio_Unitario" class="form-control" step="0.01" min="0" placeholder="Ej: 999.99" />
            <ValidationMessage For="@(() => detallePedido.Precio_Unitario)" />
        </div>

        <div class="col-12 text-center mt-4">
            <button class="btn btn-success me-2" type="submit">💾 Registrar</button>
            <button class="btn btn-outline-secondary" type="button" @onclick="Cancelar">Cancelar</button>
        </div>
    </div>
</EditForm>



   

@code {
    private Detalle_Pedido detallePedido = new Detalle_Pedido();

    private async Task Grabar()
    {
        var httpRespuesta = await http.Post<Detalle_Pedido>("api/Detalle_Pedido", detallePedido);

        if (httpRespuesta.Error)
        {
            var body = httpRespuesta.HttpResponseMessage;
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/api/Detalle_Pedido/Lista");
    }
}
