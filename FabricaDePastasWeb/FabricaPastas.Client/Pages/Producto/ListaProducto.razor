@page "/api/Producto/Lista"
@inject IHTTPServicio http;
@inject NavigationManager navigationManager;


<!DOCTYPE html>

    <html>

        <head>
            <title>Lista de Productos en stock</title>
        </head>

        <body>

            <header>
                <h1 class="text-center">Lista de Productos registrados en stock</h1>
            </header>

            <main>

                <div>
                    <p>Para registrarte, hace click en el botón</p>
                    <a class="btn btn-primary" href="/api/Producto/Crear">Cargar producto</a>
                </div>

                <table>

                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Precio base</th>
                        <th>Imagen</th>
                        <th>Stock</th>
                    </tr>

                    @if (Mensaje == null)
                    {
                        if (Lista_producto == null)
                        {
                            <p>Buscando....</p>
                        }
                        else if (Lista_producto.Count == 0)
                        {
                            <p>No existen productos cargados </p>
                        }
                        else
                        {
                            @foreach (var item in Lista_producto)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.PrecioBase</td>
                                    <td>@item.Imagen_Url</td>
                                    <td>@item.Stock</td>

                                    <td>
                                        <a class="btn btn-warning btn-sm" href="/api/Producto/Editar/@item.Id">Modificar producto</a>
                                    </td>

                                </tr>

                            }
                        }
                    }
                    else
                    {
                        <p> Error: @Mensaje</p>
                    }


                </table>

            </main>


            <footer>
                <p>&copy; 2025 La Nonna Personal</p>
            </footer>

        </body>

    </html>

@code {

    List<Producto> Lista_producto;

    string Mensaje;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        await Leer();
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Producto>>("api/Producto");

        string Mensaje = "";

        if (!resp.Error)
        {
            Lista_producto = resp.Respuesta;
        }
        else
        {
            Mensaje = await resp.ObtenerError();
        }
    }
}






