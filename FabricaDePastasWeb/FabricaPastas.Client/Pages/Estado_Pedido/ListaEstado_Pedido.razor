    private List<Estado_Pedido> ListaEstadoPedido;

    string Mensaje;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            ListaEstadoPedido = await Http.GetFromJsonAsync<List<Estado_Pedido>>("/api/Estado_Pedido");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error obteniendo Estado de pedidos: {ex.Message}");
        }
