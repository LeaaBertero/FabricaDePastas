@page "/pedido"
@inject IHTTPServicio http
@inject CarritoServicio carritoServicio
@inject NavigationManager navigationManager

<h2 class="text-center mb-4">🧾 Finalizar Pedido</h2>

@if (!pedidoEnviado)
{
    @if (!carritoServicio.Items.Any())
    {
        <div class="alert alert-warning text-center">
            Tu carrito está vacío. <a href="/catalogo-usuario">Volver al catálogo</a>.
        </div>
    }
    else
    {
        <EditForm Model="pedido" OnValidSubmit="CrearPedido">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="card shadow p-4 mb-4">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>📅 Fecha del Pedido</label>
                        <InputDate @bind-Value="pedido.Fecha_Pedido" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label>🚚 Fecha de Entrega</label>
                        <InputDate @bind-Value="pedido.Fecha_Entrega" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>📝 Observaciones (opcional)</label>
                    <InputTextArea @bind-Value="pedido.Observaciones_Catering" class="form-control" rows="3" />
                </div>
            </div>

            <h5>🛍️ Productos del Pedido</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in carritoServicio.Items)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>$@item.PrecioUnitario</td>
                            <td>$@item.Subtotal</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end">
                <h5>Total: 💰 $@carritoServicio.ObtenerTotal()</h5>
                <button type="submit" class="btn btn-success mt-3">✅ Confirmar Pedido</button>
            </div>
        </EditForm>
    }
}
else
{
    <div class="alert alert-success text-center mt-5">
        🎉 <strong>¡Tu pedido fue registrado exitosamente!</strong><br />
        Gracias por tu compra 🍝
        <div class="mt-3">
            <button class="btn btn-primary" @onclick="VolverAlCatalogo">Volver al catálogo</button>
        </div>
    </div>
}

@code {
    private CrearPedidoDTO pedido = new();
    private bool pedidoEnviado = false;

    protected override void OnInitialized()
    {
        pedido.Fecha_Pedido = DateOnly.FromDateTime(DateTime.Now);
        pedido.Fecha_Entrega = DateOnly.FromDateTime(DateTime.Now.AddDays(1));
        pedido.Total = carritoServicio.ObtenerTotal();
    }

    private async Task CrearPedido()
    {
        try
        {
            pedido.Productos = carritoServicio.Items
                .Select(item => new CrearDetalle_PedidoDTO
                {
                    Nombre = item.Nombre,
                    Cantidad = item.Cantidad,
                    Precio_Unitario = item.PrecioUnitario
                })
                .ToList();

            pedido.Total = carritoServicio.ObtenerTotal();

            var respuesta = await http.Post("api/Pedido", pedido);

            if (!respuesta.Error)
            {
                carritoServicio.Vaciar();
                pedidoEnviado = true;
            }
            else
            {
                var error = await respuesta.ObtenerError();
                Console.WriteLine($"Error al enviar pedido: {error}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al crear pedido: {ex.Message}");
        }
    }

    private void VolverAlCatalogo()
    {
        navigationManager.NavigateTo("/catalogo-usuario");
    }
}
