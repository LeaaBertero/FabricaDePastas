@page "/pedido"
@inject IHTTPServicio http
@inject CarritoServicio carritoServicio
@inject NavigationManager navigationManager

<h2 class="text-center mb-4">🧾 Finalizar Pedido</h2>

@if (!pedidoEnviado)
{
    @if (!carritoServicio.Items.Any())
    {
        <div class="alert alert-warning text-center">
            Tu carrito está vacío. <a href="/catalogo-usuario">Volver al catálogo</a>.
        </div>
    }
    else
    {
        <EditForm Model="pedido" OnValidSubmit="CrearPedido">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="card shadow p-4 mb-4">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>📅 Fecha del Pedido</label>
                        <InputDate @bind-Value="pedido.Fecha_Pedido" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label>🚚 Fecha de Entrega</label>
                        <InputDate @bind-Value="pedido.Fecha_Entrega" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>💳 Forma de Pago</label>
                        <InputSelect @bind-Value="pedido.Forma_Pago_Id" class="form-control">
                            <option value="">Seleccione una opción</option>
                            <option value="1">Efectivo</option>
                            <option value="2">Transferencia Bancaria</option>
                            <option value="3">Tarjeta</option>
                        </InputSelect>
                    </div>

                    <div class="col-md-6">
                        <label>📦 Método de Entrega</label>
                        <InputSelect @bind-Value="pedido.Metodo_Entrega_Id" class="form-control">
                            <option value="">Seleccione una opción</option>
                            <option value="1">Retiro en local</option>
                            <option value="2">Envío a domicilio</option>
                        </InputSelect>
                    </div>
                </div>

                <div class="mb-3">
                    <label>💬 Observaciones generales (opcional)</label>
                    <InputTextArea @bind-Value="pedido.Observaciones" class="form-control" rows="2" />
                </div>

                <div class="mb-3">
                    <label>📝 Observaciones de catering (opcional)</label>
                    <InputTextArea @bind-Value="pedido.Observaciones_Catering" class="form-control" rows="2" />
                </div>
            </div>

            <h5>🛍️ Productos del Pedido</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in carritoServicio.Items)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>$@item.PrecioUnitario</td>
                            <td>$@item.Subtotal</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end">
                <h5>Total: 💰 $@carritoServicio.ObtenerTotal()</h5>
                <button type="submit" class="btn btn-success mt-3">✅ Confirmar Pedido</button>
            </div>
        </EditForm>
    }
}
else
{
    <div class="alert alert-success text-center mt-5">
        🎉 <strong>¡Tu pedido fue registrado exitosamente!</strong><br />
        Gracias por tu compra 🍝
        <div class="mt-3 d-flex justify-content-center gap-2">
            <button class="btn btn-primary" @onclick="VolverAlCatalogo">
                Volver al catálogo
            </button>

            @* Botón para descargar el recibo PDF, solo aparece si hay un pedido creado *@
            @if (pedidoCreadoId != 0)
            {
                <button class="btn btn-info" @onclick="DescargarRecibo">
                    🧾 Descargar Recibo
                </button>
            }
        </div>
    </div>
}

@code {
    private CrearPedidoDTO pedido = new();
    private bool pedidoEnviado = false;

    protected override void OnInitialized()
    {
        pedido.Fecha_Pedido = DateTime.Now;
        pedido.Fecha_Entrega = DateTime.Now.AddDays(1);
        pedido.Total = carritoServicio.ObtenerTotal();
        pedido.Forma_Pago_Id = 1;
        pedido.Metodo_Entrega_Id = 1;
    }

    private async Task CrearPedido()
    {
        try
        {
            pedido.Productos = carritoServicio.Items
                .Select(item => new CrearDetalle_PedidoDTO
                {
                    Producto_Id = item.IdProducto,
                    Nombre = item.Nombre,
                    Cantidad = item.Cantidad,
                    Precio_Unitario = item.PrecioUnitario
                })
                .ToList();

            pedido.Total = carritoServicio.ObtenerTotal();

            // POST y obtenemos el pedido completo con ID
            var respuesta = await http.Post<CrearPedidoDTO, Pedido>("api/Pedido", pedido);

            if (!respuesta.Error)
            {
                carritoServicio.Vaciar();
                pedido = respuesta.Respuesta; // Ahora pedido tiene su Pedido_Id
                pedidoEnviado = true;
            }
            else
            {
                var error = await respuesta.ObtenerError();
                Console.WriteLine($"Error al enviar pedido: {error}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al crear pedido: {ex.Message}");
        }
    }

    private void DescargarRecibo()
    {
        if (pedido.Pedido_Id != 0)
        {
            navigationManager.NavigateTo($"api/Pedido/{pedido.Pedido_Id}/recibo", true);
        }
    }

    private void VolverAlCatalogo()
    {
        navigationManager.NavigateTo("/catalogo-usuario");
    }
}

