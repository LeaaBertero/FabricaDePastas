@page "/api/Categoria_Producto/Lista"
@inject IHTTPServicio http;
@inject NavigationManager navigationManager;

<h1 class="text-center mb-4">🍝 Lista de categorías de productos</h1>

<div class="container">
    @if (Mensaje == null)
    {
        @if (categoriaproductoLista == null)
        {
            <div class="alert alert-secondary text-center">🔄 Cargando categorías...</div>
        }
        else if (categoriaproductoLista.Count == 0)
        {
            <div class="alert alert-warning text-center">⚠️ No existen categorías registradas</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Tipo de pasta</th>
                            <th>Forma</th>
                            <th>Tamaño</th>
                            <th>Ingredientes base</th>
                            <th>Proceso de elaboración</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in categoriaproductoLista)
                        {
                            <tr>
                                <td>@item.Tipo_Pasta</td>
                                <td>@item.Forma</td>
                                <td>@item.Tamanio</td>
                                <td>@item.IngredientesBase</td>
                                <td>@item.ProcesoElaboracion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger text-center">❌ @Mensaje</div>
    }
</div>

@code {
    private List<Categoria_Producto> categoriaproductoLista;
    private string Mensaje;

    protected override async Task OnInitializedAsync()
    {
        await Leer();
    }

    private async Task Leer()
    {
        Mensaje = "";

        try
        {
            var resp = await http.Get<List<Categoria_Producto>>("api/Categoria_Producto/Lista");

            if (!resp.Error)
            {
                categoriaproductoLista = resp.Respuesta;
            }
            else
            {
                Mensaje = await resp.ObtenerError();
            }
        }
        catch (Exception ex)
        {
            // ✅ Captura y muestra el error real en pantalla y consola
            Mensaje = $"⚠️ Error inesperado: {ex.Message}";
            Console.WriteLine($"[DEBUG] Error en Leer(): {ex}");
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo($"/Categoria_Producto/Lista");
    }
}
