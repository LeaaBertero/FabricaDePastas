<h1 class="text-center mb-3">🧾 Detalle de lista de precios</h1>
<p class="text-center text-muted mb-4">Indique el precio personalizado del producto</p>

<EditForm Model="detalle_listaPrecio" OnValidSubmit="Grabar" class="container">
    <DataAnnotationsValidator />

    <div class="row justify-content-center g-3">
        <div class="col-md-6">
            <label for="precio_personalizado" class="form-label">Precio personalizado</label>
            <input type="number" id="precio_personalizado" @bind="detalle_listaPrecio.Precio_Personalizado"
                   class="form-control" step="0.01" min="0" placeholder="Ej: 1299.99" />
            <ValidationMessage For="@(() => detalle_listaPrecio.Precio_Personalizado)" />
        </div>

        <div class="col-12 text-center mt-4">
            <button class="btn btn-success me-2" type="submit">💾 Registrar</button>
            <button class="btn btn-outline-secondary" type="button" @onclick="Cancelar">Cancelar</button>
        </div>
    </div>
</EditForm>

        

@code {
    private Detalle_Lista_Precio detalle_listaPrecio = new Detalle_Lista_Precio();

    private async Task Grabar()
    {
        var httpRespuesta = await http.Post<Detalle_Lista_Precio>("api/Detalle_Lista_Precio", detalle_listaPrecio);

        if (httpRespuesta.Error)
        {
            var body = httpRespuesta.HttpResponseMessage;
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/api/Detalle_Lista_Precio/Lista");
    }
}
