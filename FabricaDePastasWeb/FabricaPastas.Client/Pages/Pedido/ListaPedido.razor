@page "/api/Pedido/Lista"
@inject IHTTPServicio http;
@inject NavigationManager navigationManager;

<h1 class="text-center mb-4 text-primary fw-bold">📦 Registro de pedidos</h1>

<div class="container mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0 fw-semibold">Para registrar un nuevo pedido, hacé click en el botón:</p>
        <a class="btn btn-primary" href="/api/Pedido/Crear">➕ Registrar fecha de pedido</a>
    </div>
</div>

<div class="container">
    @if (Mensaje == null)
    {
        @if (Lista_pedidos == null)
        {
            <div class="alert alert-secondary text-center">🔄 Buscando pedidos...</div>
        }
        else if (Lista_pedidos.Count == 0)
        {
            <div class="alert alert-warning text-center">⚠️ No existen listas de pedidos</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>📅 Fecha pedido</th>
                            <th>🚚 Fecha entrega</th>
                            <th>Observaciones Catering</th>
                            <th>💰 Total</th>
                            <th>⚙️ Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Lista_pedidos)
                        {
                            <tr>
                                <td>@item.Fecha_Pedido.ToShortDateString()</td>
                                <td>@item.Fecha_Entrega.ToShortDateString()</td>
                                <td>@item.Observaciones_Catering</td>
                                <td>$@item.Total</td>
                                <td>
                                    <a class="btn btn-warning btn-sm"
                                       href="/api/Pedido/Editar/@item.Id">✏️ Editar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger text-center">❌ Error: @Mensaje</div>
    }
</div>

@code {
    List<Pedido> Lista_pedidos;
    string Mensaje;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Leer();
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Pedido>>("api/Pedido");

        if (!resp.Error)
        {
            Lista_pedidos = resp.Respuesta;
        }
        else
        {
            Mensaje = await resp.ObtenerError();
        }
    }
}



