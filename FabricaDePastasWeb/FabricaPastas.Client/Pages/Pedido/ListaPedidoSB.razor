@page "/api/Pedido/ListaSB"
@inject IHTTPServicio http;
@inject NavigationManager navigationManager;

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-6 fw-bold text-primary">
            📦 Registro de pedidos
        </h1>
        <p class="text-muted">Consultá los pedidos registrados o agregá uno nuevo al sistema</p>
    </div>

    <div class="card shadow-sm border-start border-4 border-primary mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <p class="mb-0 fw-semibold">Para registrar un nuevo pedido, hacé clic en el botón:</p>
            <a class="btn btn-primary" href="/api/Pedido/Crear">
                ➕ Registrar fecha de pedido
            </a>
        </div>
    </div>

    @if (Mensaje == null)
    {
        @if (Lista_pedidos == null)
        {
            <div class="alert alert-secondary text-center shadow-sm">
                🔄 Buscando pedidos...
            </div>
        }
        else if (Lista_pedidos.Count == 0)
        {
            <div class="alert alert-warning text-center shadow-sm">
                ⚠️ No existen listas de pedidos
            </div>
        }
        else
        {
            <div class="card shadow-sm border-start border-4 border-success">
                <div class="card-body">
                    <h5 class="card-title fw-semibold text-success mb-3">
                        📋 Pedidos registrados
                    </h5>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light text-center">
                                <tr>
                                    <th>📅 Fecha pedido</th>
                                    <th>🚚 Fecha entrega</th>
                                    <th>📝 Observaciones Catering</th>
                                    <th>💰 Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Lista_pedidos)
                                {
                                    <tr>
                                        <td>@item.Fecha_Pedido.ToShortDateString()</td>
                                        <td>@item.Fecha_Entrega.ToShortDateString()</td>
                                        <td>@item.Observaciones_Catering</td>
                                        <td>$@item.Total</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger text-center shadow-sm">
            ❌ Error: @Mensaje
        </div>
    }
</div>

@code {
    List<Pedido> Lista_pedidos;
    string Mensaje;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Leer();
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Pedido>>("api/Pedido");

        if (!resp.Error)
        {
            Lista_pedidos = resp.Respuesta;
        }
        else
        {
            Mensaje = await resp.ObtenerError();
        }
    }
}