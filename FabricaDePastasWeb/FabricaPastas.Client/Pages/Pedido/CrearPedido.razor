<h1 class="text-center mb-4">📅 Fecha de pedidos y costos</h1>

<EditForm Model="pedido" OnValidSubmit="Grabar" class="container">
    <DataAnnotationsValidator />

    <div class="row g-3">
        <div class="col-md-6">
            <label for="Fechapedido" class="form-label">Fecha del pedido</label>
            <input type="date" id="Fechapedido" @bind="pedido.Fecha_Pedido" class="form-control" />
            <ValidationMessage For="@(() => pedido.Fecha_Pedido)" />
        </div>

        <div class="col-md-6">
            <label for="FechaEntrega" class="form-label">Fecha de entrega</label>
            <input type="date" id="FechaEntrega" @bind="pedido.Fecha_Entrega" class="form-control" />
            <ValidationMessage For="@(() => pedido.Fecha_Entrega)" />
        </div>

        <div class="col-md-6">
            <label for="FechaEntrega" class="form-label">Observaciones_Catering</label>
            <input type="text" id="FechaEntrega" @bind="pedido.Observaciones_Catering" class="form-control" />
            <ValidationMessage For="@(() => pedido.Observaciones_Catering)" />
        </div>

        <div class="col-md-6">
            <label for="Total" class="form-label">Costo total</label>
            <input type="number" id="Total" @bind="pedido.Total" class="form-control" step="0.01" min="0" placeholder="Ej: 1500.00" />
            <ValidationMessage For="@(() => pedido.Total)" />
        </div>

        <div class="col-12 text-center mt-4">
            <button class="btn btn-success me-2" type="submit">💾 Registrar pedido</button>
            <button class="btn btn-outline-secondary" type="button" @onclick="Cancelar">Cancelar</button>
        </div>
    </div>
</EditForm>

       

@code {
    private Pedido pedido = new Pedido();

    private async Task Grabar()
    {
        var httpRespuesta = await http.Post<Pedido>("api/Pedido", pedido);

        if (httpRespuesta.Error)
        {
            var body = httpRespuesta.HttpResponseMessage;
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/api/Pedido/Lista");
    }
}

