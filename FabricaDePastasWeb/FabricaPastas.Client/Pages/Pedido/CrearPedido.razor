@page "/api/Pedido/Crear"
@inject IHTTPServicio http;
@inject NavigationManager navigationManager;

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-6 fw-bold text-danger">
            📅 Fecha de pedidos y costos
        </h1>
        <p class="text-muted">Completá los datos del pedido y registrá el costo total del servicio</p>
    </div>

    <EditForm Model="pedido" OnValidSubmit="Grabar">
        <DataAnnotationsValidator />

        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm border-start border-4 border-danger">
                    <div class="card-body">
                        <div class="row g-4">

                            <div class="col-md-6">
                                <label for="Fechapedido" class="form-label fw-semibold">Fecha del pedido</label>
                                <input type="date" id="Fechapedido" @bind="pedido.Fecha_Pedido" class="form-control" />
                                <ValidationMessage For="@(() => pedido.Fecha_Pedido)" />
                            </div>

                            <div class="col-md-6">
                                <label for="FechaEntrega" class="form-label fw-semibold">Fecha de entrega</label>
                                <input type="date" id="FechaEntrega" @bind="pedido.Fecha_Entrega" class="form-control" />
                                <ValidationMessage For="@(() => pedido.Fecha_Entrega)" />
                            </div>

                            <div class="col-md-6">
                                <label for="Observaciones" class="form-label fw-semibold">Observaciones de catering</label>
                                <input type="text" id="Observaciones" @bind="pedido.Observaciones_Catering" class="form-control" placeholder="Ej: Sin gluten, vegano, etc." />
                                <ValidationMessage For="@(() => pedido.Observaciones_Catering)" />
                            </div>

                            <div class="col-md-6">
                                <label for="Total" class="form-label fw-semibold">Costo total</label>
                                <input type="number" id="Total" @bind="pedido.Total" class="form-control" step="0.01" min="0" placeholder="Ej: 1500.00" />
                                <ValidationMessage For="@(() => pedido.Total)" />
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button class="btn btn-success me-2" type="submit">
                                    💾 Registrar pedido
                                </button>
                                <button class="btn btn-outline-secondary me-2" type="button" @onclick="Cancelar">
                                    ❌ Cancelar
                                </button>
                                <button class="btn btn-outline-info" type="button" @onclick="VerListaPedidos">
                                    📋 Ver lista
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
</div>

       

@code {
    private Pedido pedido = new Pedido();

    private async Task Grabar()
    {
        var httpRespuesta = await http.Post<Pedido>("api/Pedido", pedido);

        if (httpRespuesta.Error)
        {
            var body = httpRespuesta.HttpResponseMessage;
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/SeccionPedidos");
    }

    private void VerListaPedidos()
    {
        navigationManager.NavigateTo("api/Pedido/ListaSB");
    }
}

